  void guncelle(float dt) override;
  StepMotorDurum durumOku() const override;

  // Homing ile ilgili fonksiyonlar
  void homingBaslat();
  HomingDurum homingDurumOku() const;

private:
  LimitSwitchArayuz* limit_switch;

  HomingDurum homing_durum;

  float homing_hizi;
};
