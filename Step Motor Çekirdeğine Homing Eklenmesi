#include "limit_switch_arayuz.h"
#include "homing_durum.h"

class StepMotorCekirdek : public StepMotorArayuz {
public:
  // limit switch dışarıdan verilir
  StepMotorCekirdek(LimitSwitchArayuz* limit);

  void baslat() override;
